<div id="main_text">
  <h2>Login</h2>
  <% labelled_form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    <div class="row">
      <%= f.text_field :login %>
    </div>
    <div class="row">
      <%= f.password_field :password %>
    </div>
    <div class="row">
      <%= f.check_box :remember_me %>
    </div>
    <div class="row">
      <%= f.submit "Login" %>
    </div>
  <% end %>
</div>

<% content_for :extra_stylesheet_includes do %>  
  <%= stylesheet_link_tag 'faux_column_right' %>
<% end %>

<% content_for :right_margin do %>
  <div id="right_margin">
    &nbsp;
  </div>
<% end %>
