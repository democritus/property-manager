<h1>Listing countries</h1>

<table>
  <tr>
    <th>Iso2</th>
    <th>Name</th>
    <th>Position</th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%=h country.iso2 %></td>
    <td><%=h country.name %></td>
    <td><%=h country.position %></td>
    <td><%= link_to 'Show', admin_country_path(country) %></td>
    <td><%= link_to 'Edit', edit_admin_country_path(country) %></td>
    <td><%= link_to 'Destroy', admin_country_path(country),
      :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

