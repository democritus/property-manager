<h1>Editing country</h1>

<% labelled_form_for(:admin, @country) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'country_fields', 
    :locals => {
      :f => f,
      :lists => @lists
    } %>
    
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_country_path(@country) %> |
<%= link_to 'Back', admin_countries_path %>
