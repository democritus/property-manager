<h1>New listing for <%= @property.name %></h1>

<% labelled_form_for([@property, Listing.new]) do |f| %>
  <%= f.error_messages %>
  
  <%= render :partial => 'listing_fields',
    :locals => {
      :f => f
    } %>
    
  <div class="row">
    <%= f.submit 'Create' %>
  </div>
<% end %>

<%= link_to 'Back to property', property_path(@property) %> |
