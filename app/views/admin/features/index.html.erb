<h1>Listing features</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Name</th>
    <th>User defined</th>
    <th>Position</th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%=h feature.type %></td>
    <td><%=h feature.name %></td>
    <td><%=h feature.user_defined %></td>
    <td><%=h feature.position %></td>
    <td><%= link_to 'Show', admin_feature_path(feature) %></td>
    <td><%= link_to 'Edit', edit_admin_feature_path(feature) %></td>
    <td><%= link_to 'Destroy', admin_feature_path(feature),
      :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feature', new_admin_feature_path %>
