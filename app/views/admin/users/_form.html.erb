<% labeled_form_for( [ :admin, @user ] ) do |f| %>
  <%= f.error_messages %>
  
  <div class="row">
    <%= f.text_field :first_name %>
  </div>
  <div class="row">
    <%= f.text_field :last_name %>
  </div>
  <div class="row">
    <%= f.text_field :login %>
  </div>
  <div class="row">
    <%= f.text_field :email %>
  </div>
  <div class="row">
    <%= f.password_field :password,
      { :label_text => f.object.new_record? ? nil : 'Change password' } %>
  </div>
  <div class="row">
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="row">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
