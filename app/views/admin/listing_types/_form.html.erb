<%
# Load data into select fields and select corresponding options
set_listing_type_form_list_data
%>

<% labelled_form_for( [ :admin, @listing_type ] ) do |f| %>
  <%= f.error_messages %>
  
  <div class="row">
    <%= f.text_field :name %>
  </div>
  <div class="row">
    <%= multiple_select_html('listing_type', 'category',
      @lists[:categories],
      {
        :label => 'Categories',
        :selected_items => multiple_select_ids(:category)
      }
    ) %>
  </div>
  <div class="row">
    <%= multiple_select_html('listing_type', 'style',
      @lists[:styles],
      {
        :label => 'Styles',
        :selected_items => multiple_select_ids(:style)
      }
    ) %>
  </div>
  <div class="row">
    <%= multiple_select_html('listing_type', 'feature',
      @lists[:features],
      {
        :label => 'Features',
        :selected_items => multiple_select_ids(:feature)
      }
    ) %>
  </div>
  
  <div class="row">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
