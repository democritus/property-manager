<h1>Editing market_image</h1>

<% form_for ( [:admin, @market_imageable, @market_image] ) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= image_tag(
      thumb_images_market_image_path(@market_image, :format => :jpg)
    ) %>
  </p>
  <p>
    <%= f.label :image_filename %>
    <%= f.text_field :image_filename %>
  </p>
  <p>
    <%= f.label :image_width %>
    <%= f.text_field :image_width %>
  </p>
  <p>
    <%= f.label :image_height %>
    <%= f.text_field :image_height %>
  </p>
  <p>
    <%= f.label :caption %>
    <%= f.text_field :caption %>
  </p>
  <p>
    <%= f.label :position %>
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :visible %>
    <%= f.check_box :visible %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', polymorphic_path([@market_imageable, :market_images]) %>
