<h1>Listing agencies</h1>

<table>
  <tr>
    <th>Logo</th>
    <th>Name</th>
    <th>Subdomain</th>
    <th>Primary market</th>
    <th>Broker</th>
  </tr>

<% @agencies.each do |agency| %>
  <tr>
    <td>
      <% if agency.agency_logos[0] %>
        <%= image_tag(
          thumb_images_agency_logo_path(agency.agency_logos[0], :format => :jpg)
        ) %>
      <% end %></td>
    <td><%=h agency.name %></td>
    <td><%=h agency.subdomain %></td>
    <td><%=h primary_market(agency) %></td>
    <td><%=h broker(agency) %></td>
    <td><%= link_to 'Show', admin_agency_path(agency) %></td>
    <td><%= link_to 'Edit', edit_admin_agency_path(agency) %></td>
    <td><%= link_to 'Destroy', admin_agency_path(agency),
      :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New agency', new_admin_agency_path %>
