<% content_for :extra_stylesheet_includes do %>
  <% if @controller.action_name == 'show' %>
    <%= stylesheet_link_tag 'agencies_show' %>
    <%= stylesheet_link_tag 'faux_column_right' %>
  <% end %>
<% end %>

<% content_for :embedded_styles do %>
  #faux_column_right {
    background: url("../images/right_margin_bg.gif") repeat-y 100% 0;
  }
<% end %>

<% content_for :extra_javascript_includes do %>
<% end %>

<% content_for :embedded_javascript do %>
<% end %>

<% content_for :header do %>  
  <%= render :partial => "layouts/header_large" %>
<% end %>

<% content_for :content do %>
  <% if @controller.action_name == 'show' %>
    <div id="right_margin">
      <h2>Popular searches</h2>
      <div class="menu_list">
        <ul id="alternative_listing_filters">
          <li><%= link_to 'Homes under $200,000', readable_listings_path(
            'categories_name_equals' => 'Homes',
            'listing_type_name_equals' => 'for sale',
            'ask_amount_less_than_or_equal_to' => 200000
          ) %></li>
          
          <li><%= link_to 'Businesses for sale', readable_listings_path(
            'categories_name_equals' => 'Businesses',
            'listing_type_name_equals' => 'for sale'
          ) %></li>
        </ul>
      </div>
      <h2>Contact Us</h2>
      <div class="menu_list">
        <ul id="alternative_contact_links">
          <li><%= link_to 'List your property', contact_agency_path(
            @active_agency) %></li>
          <li><%= link_to 'Become a partner agency', contact_agency_path(
            @active_agency) %></li>
          <li><%= link_to 'Other inquiries', contact_agency_path(
            @active_agency) %></li>
        </ul>
      </div>
      <h2>Suggested links</h2>
      <div class="menu_list">
        <ul id="partner_list">
          <li>
            <% link_to 'http://www.costaricatraveler.com/',
              :target => '_blank' do %>
              <%= image_tag 'cr_traveler_cover.jpg', :width => 126,
                :height => 160, :alt => 'Costa Rica Traveler Magazine' %>
            <% end %>
            The best source of information for the traveler
          </li>
          <!--
          <li><%= link_to 'Green Mango Real Estate',
            'http://www.greenmangosa.com/',
            :target => '_blank' %></li>
          <li><%= image_tag '', :width => 100, :height => 75,
            :alt => 'Green Mango Real Estate, Puriscal' %></li>
          <li><%= image_tag '', :width => 100, :height => 75,
            :alt => 'The Eco Embassy' %></li>
          -->
        </ul>
      </div>
    </div>
  <% end %>
  
  <div id="main_window">
    <% unless flash[:notice].blank? %>
      <p style="color: green"><%= flash[:notice] %></p>
    <% end %>
    
    <%= yield(:agencies_content) or yield  %>
  </div>
<% end %>

<%= render :file => 'layouts/application' %>
